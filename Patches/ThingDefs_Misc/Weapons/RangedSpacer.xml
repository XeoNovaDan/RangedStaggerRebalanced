<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- ========== Charge Rifle ========== -->
    <Operation Class="PatchOperationAdd">
        <xpath>*/ThingDef[defName="Bullet_ChargeRifle"]/projectile</xpath>
        <value>
            <stoppingPower>1.5</stoppingPower>
        </value>
    </Operation>

    <!-- ========== Charge Lance ========== -->
    <Operation Class="PatchOperationReplace">
        <xpath>*/ThingDef[defName="Bullet_ChargeLance"]/projectile/stoppingPower</xpath>
        <value>
            <stoppingPower>3.2</stoppingPower>
        </value>
    </Operation>

</Patch>